// jsconfig.json
{
  "compilerOptions": {
    "baseUrl": ".", // Important for resolving paths relative to the project root
    "paths": {
      "@/*": ["./src/*"] // Define the alias for your source directory
    },
    // Add any other JavaScript-specific options here if needed,
    // e.g., "jsx": "react-jsx" if using React with JSX
    "jsx": "react-jsx" // Or "react" if using an older React version
  },
  "include": ["src/**/*"], // Tell your IDE to include all files in src for intellisense
  "exclude": ["node_modules", "dist"]
}